@model ProjectManagementApplication.Models.Image
<h2>Delete</h2>

<h3>Are you sure you want to delete this image?</h3>
<div>
    @{
        var base64 = Convert.ToBase64String(Model.Content);
        Model.Url = String.Format("data:image/gif;base64,{0}", base64);
    }
    <img class="task-image img-responsive" src="@Model.Url">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to task", "Details", "Tasks", new {id = Model.TaskId}, null)
            <input type="submit" value="Delete" class="btn btn-danger"/>
        </div>
    }
</div>
