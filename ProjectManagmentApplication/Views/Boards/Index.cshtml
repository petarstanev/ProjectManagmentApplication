@model PagedList.IPagedList<ProjectManagementApplication.Models.Board>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<p>
    @Html.ActionLink("Create new board", "Create", null, new { @class = "btn btn-lg btn-info" })
</p>

@using (Html.BeginForm("Index", "Boards", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="input-group">
        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control input-lg", @placeholder = "Search by board title, type or administrator:" })
        <span class="input-group-btn">
            <input type="submit" class="btn btn-lg btn-info " value="Search" />
        </span>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Title", "Index", new { sortType = ViewBag.TitleParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Administrator", "Index", new { sortType = ViewBag.AdministratorParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Board Type", "Index", new { sortType = ViewBag.Type, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoardType)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.BoardId })
            </td>
        </tr>
    }

</table>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))